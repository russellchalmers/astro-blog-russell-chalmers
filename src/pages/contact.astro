---
import BlogLayout from '../layouts/BlogLayout.astro';
import ContactForm from '../components/ContactForm.astro';
import CVDownloadGate from '../components/CVDownloadGate.astro';
---

<BlogLayout title="Contact - Russell Chalmers">
  <!-- Include CV Download Gate component (hidden, for modal use) -->
  <div class="hidden">
    <CVDownloadGate />
  </div>

  <!-- Hero Section -->
  <section class="relative py-20">
    <div class="max-w-4xl mx-auto px-4">
      <h1 class="text-5xl font-bold text-center mb-8">
        <span class="gradient-text">Let's Connect</span>
      </h1>
      <p class="text-xl text-center text-gray-300 mb-12 max-w-3xl mx-auto">
        Whether you're looking to strengthen your security posture or scale your infrastructure, I'm here to help
      </p>
    </div>
  </section>

  <!-- Contact Options -->
  <section class="py-12">
    <div class="max-w-6xl mx-auto px-4">
      <div class="grid md:grid-cols-3 gap-8 mb-16">
        <!-- Email -->
        <div class="glass p-6 rounded-xl text-center hover:bg-purple-500/10 transition-all">
          <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-pink-500 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2">Email</h3>
          <p class="text-gray-400 mb-4">Direct communication</p>
          <a href="mailto:russell.chalmers@gmail.com" class="text-purple-400 hover:text-purple-300">
            russell.chalmers@gmail.com
          </a>
        </div>

        <!-- LinkedIn -->
        <div class="glass p-6 rounded-xl text-center hover:bg-purple-500/10 transition-all">
          <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-cyan-500 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2">LinkedIn</h3>
          <p class="text-gray-400 mb-4">Professional network</p>
          <a href="https://linkedin.com/in/russell-chalmers" target="_blank" class="text-blue-400 hover:text-blue-300">
            Connect on LinkedIn
          </a>
        </div>

        <!-- CV Download -->
        <div class="glass p-6 rounded-xl text-center hover:bg-purple-500/10 transition-all">
          <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-teal-500 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2">Download CV</h3>
          <p class="text-gray-400 mb-4">Full professional history</p>
          <button onclick="window.showCVDownloadModal()" class="text-green-400 hover:text-green-300">
            Get My CV →
          </button>
        </div>
      </div>

      <!-- Contact Form Section -->
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-center mb-8 gradient-text">Send Me a Message</h2>
        <p class="text-center text-gray-400 mb-12">
          I typically respond within 24-48 hours. For urgent matters, please mention it in your message.
        </p>
        
        <ContactForm />
      </div>
    </div>
  </section>

  <!-- Availability Section -->
  <section class="py-20 bg-gray-800/30">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-8 gradient-text">Current Availability</h2>
      <div class="glass p-8 rounded-xl">
        <div class="flex items-center justify-center mb-4">
          <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse mr-3"></div>
          <span class="text-xl font-semibold">Available for New Opportunities</span>
        </div>
        <p class="text-gray-400 mb-6">
          Open to both permanent roles and consulting engagements
        </p>
        <div class="grid md:grid-cols-2 gap-6 text-left max-w-2xl mx-auto">
          <div>
            <h3 class="font-semibold mb-2 text-purple-400">Permanent Roles</h3>
            <ul class="space-y-1 text-sm text-gray-400">
              <li>• Security Architecture Lead</li>
              <li>• Infrastructure Director</li>
              <li>• Technical CTO/VP Engineering</li>
              <li>• Principal Security Engineer</li>
            </ul>
          </div>
          <div>
            <h3 class="font-semibold mb-2 text-blue-400">Consulting</h3>
            <ul class="space-y-1 text-sm text-gray-400">
              <li>• Security assessments</li>
              <li>• Zero Trust implementation</li>
              <li>• Cloud migration strategy</li>
              <li>• Performance optimization</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
</BlogLayout>