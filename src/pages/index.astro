---
import BlogLayout from '../layouts/BlogLayout.astro';
---

<BlogLayout title="Your Name - Professional Blog">
  <!-- Hero Section -->
  <section class="py-20">
    <div class="text-center">
      <h1 class="text-5xl font-bold mb-6 bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
        Hi, I'm Russell Chalmers
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-300 mb-8 max-w-2xl mx-auto">
        Cyber Security Leader
      </p>
      <div class="flex justify-center space-x-4">
        <a href="/blog" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg transition transform hover:scale-105">
          Read My Blog
        </a>
        <a href="/projects" class="border-2 border-gray-300 dark:border-gray-600 hover:border-blue-600 dark:hover:border-blue-400 px-6 py-3 rounded-lg transition">
          View Projects
        </a>
      </div>
    </div>
  </section>

<!-- Featured Posts -->
<section class="py-12">
	<h2 class="text-3xl font-bold mb-8 text-center">Latest Posts</h2>
	<div class="grid md:grid-cols-3 gap-6">
	  <!-- Blog Card -->
	  <article class="bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-xl transition-shadow">
		<div class="p-6">
		  <span class="text-sm text-blue-600 dark:text-blue-400">January 25, 2024</span>
		  <h3 class="text-xl font-bold mt-2 mb-3">Welcome to My Professional Blog</h3>
		  <p class="text-gray-600 dark:text-gray-300 mb-4">
			An introduction to my blog and what you can expect to find here...
		  </p>
		  <a href="/blog/first-post" class="text-blue-600 dark:text-blue-400 hover:underline">
			Read more â†’
		  </a>
		</div>
	  </article>
	</div>
  </section>
</BlogLayout>